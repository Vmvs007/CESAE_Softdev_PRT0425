<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Your comment-->
    <TextView
        android:id="@+id/text_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONVERSOR DE MOEDAS"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/dark_green"/>

    <EditText
        android:id="@+id/edit_valor_euros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="VALOR EM EUROS"/>


    <LinearLayout
        android:id="@+id/layout_buttons_moedas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_converter_dolares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="DOLAR"
            android:backgroundTint="@color/dark_green"/>

        <Button
            android:id="@+id/button_converter_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="REAL"
            android:backgroundTint="@color/dark_green"/>

        <Button
            android:id="@+id/button_converter_libras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="LIBRA"
            android:backgroundTint="@color/dark_green"/>

    </LinearLayout>


    <TextView
        android:id="@+id/text_valor_convertido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="0.0"/>


    

</LinearLayout>